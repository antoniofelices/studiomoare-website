---
const title = Astro.props.title
const text = Astro.props.text
const linktodevelop = Astro.props.linktodevelop
const textlinktodevelop = Astro.props.textlinktodevelop
const linktodesign = Astro.props.linktodesign
const textlinktodesign = Astro.props.textlinktodesign
---

<div>
	<h1 class="text-6xl md:text-9xl lg:text-11xl 2xl:text-18xl text-center font-bold mb-4">{title}</h1>
	<p class="text-xl md:text-2xl lg:text-4xl text-center mb-6 max-w-(--breakpoint-md) mx-auto">{text}</p>
	<div class="flex flex-col justify-center lg:flex-row">
		<button class="text-white bg-m-orange rounded-sm hover:bg-m-blue-600 focus:outline-hidden font-medium dark:bg-m-orange text-xs lg:text-sm px-5 py-2.5 me-2 mb-2 flex items-center gap-x-2">
			<a class="border-0" href={`/${linktodevelop}`}>{textlinktodevelop}</a>
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12" arial-hidden="true"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
		</button>
		<button class="text-white bg-m-violet rounded-sm hover:bg-m-blue-600 focus:outline-hidden font-medium dark:bg-m-violet text-xs lg:text-sm px-5 py-2.5 me-2 mb-2 mt-2 lg:mt-0 flex items-center gap-x-2">
			<a class="border-0" href={linktodesign} rel="noopener noreferrer" target="_blank"> {textlinktodesign}</a>
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="inline feather feather-external-link" arial-hidden="true"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
		</button>
	</div>
</div>