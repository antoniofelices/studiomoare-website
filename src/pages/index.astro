---
import Layout from '@layouts/layout-base.astro';
import TextIntro from '@components/text-intro';

import { getEntry } from 'astro:content';
const dataRaw = await getEntry('static-data', 'page-index-es');
const dataFragments = dataRaw.data;
---

<Layout title={dataFragments.fragment_4} includeFooter={false} mainMenu={false}>
	<main class="h-lvh overflow-hidden bg-no-repeat bg-cover bg-center" style="background-image: url(/studio-moare-02.svg);">
		<div class="container">
			<div class="grid place-items-center h-screen">
				<TextIntro
					title={dataFragments.fragment_1}
					text={dataFragments.fragment_2}
					linktodevelop={dataFragments.fragment_6}
					textlinktodevelop={dataFragments.fragment_4}
					linktodesign={dataFragments.fragment_5}
					textlinktodesign={dataFragments.fragment_3}
				/>
			</div>
		</div>
	</main>
</Layout>